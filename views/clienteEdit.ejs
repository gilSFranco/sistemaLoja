<%- include("partials/header.ejs") %>

    <div class="formularioClientes mb-4">
        <form action="/clientes/update/<%= cliente._id %>" method="post">
            <h1 class="text-dark fw-bold fs-2">Atualizando as suas informações</h1>
            <div class="d-flex my-2 mt-4">
                <div class="form-floating me-2 w-75">
                    <input type="text" name="nome" id="floatingInput" class="form-control" value="<%= cliente.nome %>" placeholder="Seu nome" required>
                    <label for="floatingInput">Nome</label>
                </div>
                <div class="form-floating w-75">
                    <input type="text" name="cpf" id="floatingInput" class="form-control" value="<%= cliente.cpf %>" placeholder="Seu cpf" required>
                    <label for="floatingInput">CPF</label>
                </div>
            </div>
            <div class="d-flex my-2">
                <div class="form-floating me-2 w-50">
                    <input type="text" name="rua" id="floatingInput" class="form-control" value="<%= cliente.rua %>" placeholder="Sua rua" required>
                    <label for="floatingInput">Rua</label>
                </div>
                <div class="form-floating me-2">
                    <input type="number" name="numero" id="floatingInput" class="form-control" value="<%= cliente.numero %>" placeholder="Seu numero" required>
                    <label for="floatingInput">Numero</label>
                </div>
                <div class="form-floating">
                    <input type="text" name="bairro" id="floatingInput" class="form-control" value="<%= cliente.bairro %>" placeholder="Seu bairro" required>
                    <label for="floatingInput">Bairro</label>
                </div>
            </div>
            <div class="form-floating my-2 mb-4">
                <input type="text" name="cidade" id="floatingInput" class="form-control" value="<%= cliente.cidade %>" placeholder="Sua cidade" required>
                <label for="floatingInput">Cidade</label>
            </div>
            <button type="submit" class="btn btn-dark w-100 py-2">Atualizar</button>
        </form>
    </div>

<%- include("partials/footer.ejs") %>