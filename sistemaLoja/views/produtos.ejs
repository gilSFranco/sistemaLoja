<%- include("partials/header.ejs") %>

<div class="formularioProdutos mb-4">
    <form action="" method="post">
        <h1 class="text-dark fw-bold fs-2">Cadastro de Produtos</h1>
        <div class="d-flex my-2 mt-4">
            <div class="form-floating me-2 w-75">
                <input type="text" name="nome" id="floatingInput" class="form-control" placeholder="Seu nome" required>
                <label for="floatingInput">Nome</label>
            </div>
            <div class="form-floating w-75">
                <input type="text" name="cpf" id="floatingInput" class="form-control" placeholder="Seu cpf" required>
                <label for="floatingInput">CPF</label>
            </div>
        </div>
        <div class="d-flex my-2">
            <div class="form-floating me-2 w-50">
                <input type="text" name="rua" id="floatingInput" class="form-control" placeholder="Sua rua" required>
                <label for="floatingInput">Rua</label>
            </div>
            <div class="form-floating me-2">
                <input type="text" name="numero" id="floatingInput" class="form-control" placeholder="Seu numero" required>
                <label for="floatingInput">Numero</label>
            </div>
            <div class="form-floating">
                <input type="text" name="bairro" id="floatingInput" class="form-control" placeholder="Seu bairro" required>
                <label for="floatingInput">Bairro</label>
            </div>
        </div>
        <div class="form-floating my-2 mb-4">
            <input type="text" name="cidade" id="floatingInput" class="form-control" placeholder="Sua cidade" required>
            <label for="floatingInput">Cidade</label>
        </div>
        <button type="submit" class="btn btn-dark w-100 py-2">Cadastrar</button>
    </form>
</div>

    <div class="containerCards">
        <% produtos.forEach(produto => { %>
        <div class="card" style="width: 18rem;">
            <img src='<%= produto.imagem %>' class="card-img-top" alt="Imagem">
            <div class="card-body">
                <h5 class="card-title"><%= produto.nome %> (<%= produto.categoria %>)</h5>
                <p class="card-text"><%= produto.preco.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %>.</p>
                <a href="" class="btn btn-dark btnComprar">Comprar</a>
            </div>            
            <div class="acoes">
                <a href="/produtos/edit/<%= produto._id %>" class="btn btn-warning text-white">Editar</a>
                <a href="/produtos/delete/<%= produto._id %>" class="btn btn-danger" onclick="return confirm('Confirma a exclusÃ£o do registro? ')">Excluir</a>
            </div>
        </div>
        <% }) %>
    </div>

<%- include("partials/footer.ejs") %>