<%- include("partials/header.ejs") %>

    <div class="formularioPedidos mb-4">
        <form action="" method="post">
            <h1 class="text-dark fw-bold fs-2">Cadastro de Pedidos</h1>
            <div class="form-floating my-2 mt-4">
                <input type="number" name="numero" id="floatingInput" class="form-control" placeholder="Numero do pedido" required>
                <label for="floatingInput">Numero</label>
            </div>
            <div class="form-floating my-2 mb-4">
                <input type="number" name="valor" id="floatingInput" class="form-control" placeholder="Valor do pedido" required>
                <label for="floatingInput">Valor</label>
            </div>
            <button type="submit" class="btn btn-dark w-100 py-2">Cadastrar</button>
        </form>
    </div>

    <table class="table table-dark table-striped table-hover caption-top tblPedidos">
        <caption class="text-dark fw-bold fs-2">Pedidos</caption>
        <thead class="table-dark">
            <tr>
                <th scope="col">Numero</th>
                <th scope="col">Valor</th>
                <th scope="col" colspan="2" style="text-align: center;">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% pedidos.forEach(pedido => { %>
            <tr>
                <td><%= pedido.numero %></td>
                <td><%= pedido.valor.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
                <td><a href="/pedidos/edit/<%= pedido._id %>" class="btn btn-warning text-white">Editar</a></td>
                <td><a href="/pedidos/delete/<%= pedido._id %>" class="btn btn-danger" onclick="return confirm('Confirma a exclusão do registro? ')">Excluir</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>

<%- include("partials/footer.ejs") %>